@{
    ViewBag.Title = "Contact";
}
<style>
    body {
        background-color: #dcdcdc;
    }
    /* 1. Page Typography */
    .contact-header {
        font-family: 'Times New Roman', serif;
        font-size: 3rem;
        text-align: center;
        margin-top: 30px;
        margin-bottom: 40px;
        color: #1a1a1a;
    }

    .contact-info-text {
        text-align: center;
        font-size: 1.1rem;
        color: #333;
        margin-bottom: 25px;
        line-height: 1.6;
    }

    .contact-label {
        font-size: 1.2rem; /* Slightly larger for "By Email", etc */
        color: #555;
    }

    .contact-value {
        font-weight: bold;
        color: #000;
        font-size: 1.1rem;
    }

    /* 3. Middle Column Form */
    .feedback-column {
        display: flex;
        flex-direction: column;
        align-items: center; /* This centers the title and the form itself */
    }

    /* Ensure the form takes up the full width of the column but stays centered */
    .feedback-form {
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .feedback-title {
        font-weight: bold;
        text-align: center;
        margin-bottom: 15px;
        color: #000;
    }

    .feedback-textarea {
        width: 100%;
        max-width: 350px; /* Optional: Sets a nice consistent width for the box */
        height: 300px;
        border: 1px solid #999;
        background-color: white;
        padding: 15px;
        resize: none;
        margin-bottom: 10px; /* Space between box and button */
    }

    .btn-custom-submit {
        background-color: white;
        border: 1px solid #000;
        color: #000;
        padding: 8px 40px;
        margin-top: 20px;
        font-weight: bold;
        display: block;
        margin-left: auto;
        margin-right: auto;
        transition: all 0.2s;
    }

    .btn-custom-submit:hover {
        background-color: #f0f0f0;
    }

    /* 4. Map Section (Right Column) */
    .map-container {
        border: 5px solid #4a2c2c; /* The thick dark red/brown border */
        padding: 0;
        width: 100%;
        height: 350px; /* Adjust height to match form */
        margin-bottom: 10px;
    }

    .visit-us-text {
        text-align: center;
        font-size: 1rem;
        color: #333;
    }
</style>

<div class="container-fluid">

    <h1 class="contact-header">Contact Us</h1>

    <div class="row">

        <div class="col-md-4">
            <div class="contact-info-text">
                <span class="contact-label">By Email:</span><br />
                <span class="contact-value">mefistotheatre@gmail.com</span>
            </div>

            <div class="contact-info-text">
                <span class="contact-label">By Phone:</span><br />
                <span class="contact-value">+447799447799</span>
            </div>

            <div class="contact-info-text">
                <span class="contact-label">Our Address:</span><br />
                <span class="contact-value">
                    Victoria Road 78,<br />
                    Glasgow, Scotland
                </span>
            </div>
        </div>

        <div class="col-md-4 feedback-column">
            <p class="feedback-title">Let us know what you think in one click!</p>

           
            <textarea name="message" class="feedback-textarea" placeholder=""></textarea>

            <button type="submit" class="btn-custom-submit">Submit</button>
        </div>

        <div class="col-md-4">
            <div class="map-container">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d17906.18524458532!2d-4.269426986634718!3d55.83683002626573!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x488847051919299d%3A0x675841e2614a938c!2sVictoria%20Rd%2C%20Glasgow!5e0!3m2!1sen!2suk!4v1709228492000!5m2!1sen!2suk"
                        width="100%"
                        height="100%"
                        style="border:0;"
                        allowfullscreen=""
                        loading="lazy"
                        referrerpolicy="no-referrer-when-downgrade">
                </iframe>
            </div>
            <p class="visit-us-text">Visit Us Here</p>
        </div>
    </div>
</div>